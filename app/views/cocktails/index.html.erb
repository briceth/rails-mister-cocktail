<div class="wrapper">
  <div class="text-center">
    <div class="container">
      <div class="row">
        <% @cocktails.each do |cocktail| %>
          <div class="col-xs-12 col-sm-6 col-md-3">
            <div class="card">
              <%= link_to cocktail_path(cocktail), class: "#" do %>
                <%= image_tag "https://unsplash.it/200/300/?random", class: "#" %>
              <% end %>
                <div class="card-name"><h2><%= cocktail.name  %></h2></div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <%= link_to "Ajoutez un cocktail", new_cocktail_path, class: "btn btn-primary"%>
  </div>
</div>
